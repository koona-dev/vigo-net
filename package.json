{
  "name": "vigo_net",
  "private": true,
  "scripts": {
    "dev": "concurrently \"turbo run dev --filter=backend\" \"turbo run dev --filter=admin-panel\" \"npm run dev:mobile\"",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:admin": "turbo run dev --filter=admin-panel",
    "dev:mobile": "cd apps/mobile && flutter emulators --launch Pixel_7_Pro_API_34 && flutter run lib/main.dart",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
